# ===== INSTAGRAM GRAPH API CONFIGURATION =====
# Your Instagram Business account credentials for posting
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_USER_ID=your_instagram_business_user_id_here
GRAPH_API_VERSION=v21.0

# ===== INSTAGRAM SCRAPER CREDENTIALS =====
# Regular Instagram account for scraping Explore page (NOT the business account)
INSTAGRAM_SCRAPER_USERNAME=your_instagram_username_here
INSTAGRAM_SCRAPER_PASSWORD=your_instagram_password_here
INSTAGRAM_SESSION_FILE=instagram_session.json

# ===== OPENAI API CONFIGURATION =====
# OpenAI API key for AI-powered caption generation
OPENAI_API_KEY=your_openai_api_key_here
USE_AI_CAPTIONS=true

# ===== TELEGRAM BOT CONFIGURATION =====
# Telegram bot for notifications (create via @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===== AUTO-REPOST SCHEDULING =====
# How often to find and repost viral videos (in hours)
POSTING_INTERVAL_HOURS=3

# ===== VIRAL VIDEO FILTERS =====
# Minimum criteria for videos to be considered "viral"
MIN_LIKES=10000
MIN_VIEWS=50000
MIN_ENGAGEMENT_RATE=0.05
EXPLORE_FETCH_COUNT=50

# ===== VIDEO DOWNLOAD CONFIGURATION =====
# Path where downloaded videos will be saved
VIDEO_DOWNLOAD_PATH=downloaded_videos

# ===== VIDEO HOSTING (REQUIRED FOR POSTING) =====
# Public HTTPS URL for video hosting
# NOTE: You need to implement video hosting (upload to CDN/cloud storage)
VIDEO_URL=https://your-cdn.com/video.mp4

# ===== CREDIT MONITORING =====
CREDIT_LIMIT=3.0
CREDIT_CHECK_INTERVAL=3600
TRIGGER_ZIP_CREATION=false

# ===== SERVER CONFIGURATION =====
PORT=5000
REPLIT_DOMAINS=your-repl.replit.dev

# ===== SECURITY =====
# MANDATORY - Set a strong random key for trigger-package endpoint
# Generate with: openssl rand -base64 32
TRIGGER_API_KEY=your-random-secure-key-here
